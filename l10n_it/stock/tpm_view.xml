<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        # -------------------------------------------------------------
        # Stock Transport Payment Methods
        # -------------------------------------------------------------
        <record id="view_tpm_tree" model="ir.ui.view">
            <field name="name">stock.tpm.tree</field>
            <field name="model">stock.tpm</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Transport Payment Methods">
                    <field colspan="4" name="code" select="1"/>
                    <field colspan="4" name="name" select="1"/>
                </tree>
            </field>
        </record>
        <record id="stock_tpm_form" model="ir.ui.view">
            <field name="name">stock.tpm.form</field>
            <field name="model">stock.tpm</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Transport Payment Methods">
                    <field colspan="4" name="code" select="1"/>
                    <field colspan="4" name="name" select="1"/>
                    <field name="active" select="1"/>
                </form>
            </field>
        </record>
        
        <record id="action_tpm_tree" model="ir.actions.act_window">
            <field name="name">Transport Payment Methods</field>
            <field name="res_model">stock.tpm</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem action="action_tpm_tree" id="menu_action_tpm_tree" parent="stock.menu_stock_configuration"/>
    
    </data>
</openerp>

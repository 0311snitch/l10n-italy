<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        # -------------------------------------------------------------
        # Transport Cause
        # -------------------------------------------------------------
        <record id="view_transport_cause_tree" model="ir.ui.view">
            <field name="name">stock.transport_cause.tree</field>
            <field name="model">stock.transport_cause</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Transport Cause">
                    <field colspan="4" name="code" select="1"/>
                    <field colspan="4" name="name" select="1"/>
                </tree>
            </field>
        </record>
        <record id="stock_transport_cause_form" model="ir.ui.view">
            <field name="name">stock.transport_cause.form</field>
            <field name="model">stock.transport_cause</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Transport Cause">
                    <field colspan="4" name="name" select="1"/>
                    <field colspan="4" name="code" select="1"/>
                    <field name="active" select="1"/>
                </form>
            </field>
        </record>
        
        <record id="action_transport_cause_tree" model="ir.actions.act_window">
            <field name="name">Transport Cause</field>
            <field name="res_model">stock.transport_cause</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem action="action_transport_cause_tree" id="menu_action_transport_cause_tree" parent="stock.menu_stock_configuration"/>
    
    </data>
</openerp>

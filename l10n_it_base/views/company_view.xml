    <record model="ir.ui.view" id="view_company_form_inherit_country_id">
        <field name="name">company.form.country_id</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <data>
                <field name="country_id" position="replace"/>
                <field name="street" position="before">
                    <field name="country_id" placeholder="Country"
                           class="oe_no_button"
                           on_change="on_change_country(country_id)"
                           options='{"no_open": True}' attrs="{'readonly': [('use_parent_address','=',True)]}"
                           select="1" required="1"/>
                </field>
            </data>
        </field>
    </record>


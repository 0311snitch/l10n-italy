<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_payment_data_form_fatturapa">
            <field name="name">fatturapa.payment.data.form</field>
            <field name="model">fatturapa.payment.data</field>
            <field name="arch" type="xml">
                <form string="Payment Data">
                    <group>
                        <field name="payment_terms" />
                    </group>
                    <group>
                        <group string="Payments Details">
                            <field name="payment_methods" nolabel="1" >
                            <tree editable="bottom" string="Payments">
                                    <field name="recipient"/>
                                    <field name="fatturapa_pm_id"/>
                                    <field name="payment_term_start" />
                                    <field name="payment_days"/>
                                    <field name="payment_due_date"/>
                                    <field name="payment_amount"/>
                                    <field name="post_office_code"/>
                                    <field name="recepit_partner_contact"/>
                                    <field name="payment_bank"/>
                                    <field name="prepayment_discount"/>
                                    <field name="max_payment_date"/>
                                    <field name="penalty_amount"/>
                                    <field name="penalty_date"/>
                                    <field name="account_move_line_id"/>
                                    <field name="payment_data_id"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </form>
            </field>
        </record>

    <record model="ir.ui.view" id="customer_invoice_lines_not_editable">
      <field name="name">customer_invoice_lines_not_editable</field>
      <field name="model">account.invoice</field>
      <field name="inherit_id" ref="account.invoice_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='invoice_line']/tree" position="attributes" >
          <attribute name="editable" eval="False"/>
        </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="supplier_invoice_lines_not_editable">
      <field name="name">supplier_invoice_lines_not_editable</field>
      <field name="model">account.invoice</field>
      <field name="inherit_id" ref="account.invoice_supplier_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='invoice_line']/tree" position="attributes" >
          <attribute name="editable" eval="False"/>
        </xpath>
      </field>
    </record>

        <record model="ir.ui.view" id="view_invoice_line_form_fatturapa">
            <field name="name">account.invoice.line.fatturapa</field>
            <field name="model">account.invoice.line</field>
            <field name="inherit_id" ref="account.view_invoice_line_form"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <separator string="FatturaPA"/>
                        <group>
                            <group string="Related Documents">
                                <field name="related_documents" nolabel="1">
                                <tree editable="bottom" string="Related Documents">
                                        <field name="type"/>
                                        <field name="name"/>
                                        <field name="lineRef" readonly="1"/>
                                        <field name="date"/>
                                        <field name="numitem"/>
                                        <field name="code"/>
                                        <field name="cig"/>
                                        <field name="cup"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                </field>


            </field>
        </record>


    </data>
</openerp>
